@model HelpDesk.Models.User

@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="/css/login.css"/>
    <style>
        .center {
            text-align: center;
            margin-top: 10px;
        }

        button {
            background-color:  #333;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
        }

        button {
            background-color:  #333;
        }

        button[type="button"] {
            width: 200px;
        }
    </style>
</head>

<body>
    <div class="login-box">
        <form asp-action="LoginUser" method="post">
            <h1>Login as user</h1>
            <div>
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div>
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
            </div>
            <div>
                <button type="submit">Login</button>
            </div>
        </form>
        <div class="error-message">@ViewData["Error"]</div>
    </div>
    <div class="center">
        <button type="button" onclick="location.href='@Url.Action("Login", "Agent")'">Login as Engineer</button>
    </div>
</body>
